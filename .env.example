# Yellowstone gRPC for real-time streaming (fastest, recommended)
YELLOWSTONE_GRPC_URL=http://localhost:10000

# Solana RPC for polling (used if Yellowstone fails)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# SQLite database path
SQLITE_DB_PATH=indexer.db

# L1 Cache: Hot slots (in-memory)
CACHE_L1_SIZE=1000

# L2 Cache: Transactions (LRU + TTL)
CACHE_L2_SIZE=10000